<div class="container mt-5">
  <h1 class="text-center">Lista de Turmas</h1>
  <table class="table table-striped">
    <thead>
      <tr>
        <th>ID</th>
        <th>Nome</th>
        <th>Ações</th>
      </tr>
    </thead>
    <tbody>
      <% @turmas.each do |turma| %>
        <tr>
          <td><%= turma.id %></td>
          <td><%= turma.nome %></td>
          <td>
            <%= link_to 'Mostrar', turma, class: "btn btn-primary" %>
            <%= link_to 'Editar', edit_turma_path(turma), class: "btn btn-warning" %>
            <%= link_to 'Excluir', turma, method: :delete, data: { confirm: 'Tem certeza?' }, class: "btn btn-danger" %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
